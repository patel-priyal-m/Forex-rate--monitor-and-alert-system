# ============================================================================
# FX Rate Monitoring System - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your configuration
# DO NOT commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Kafka Configuration
# ----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC=fx-rates
KAFKA_GROUP_ID=rate-processor-group

# ----------------------------------------------------------------------------
# Alert Engine Configuration
# ----------------------------------------------------------------------------
ALERT_TOPIC=fx-alerts
ALERT_GROUP_ID=alert-engine-group

# ----------------------------------------------------------------------------
# External API Configuration
# ----------------------------------------------------------------------------
# Exchange Rate API endpoint
FX_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# Fetch interval in seconds (recommended: 30-60)
FETCH_INTERVAL=30

# ----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# ----------------------------------------------------------------------------
# Full database URL (alternative to individual settings)
DATABASE_URL=postgresql://fxuser:fxpassword@postgres:5432/fxrates

# Individual settings (Docker Compose uses these)
POSTGRES_DB=fxrates
POSTGRES_USER=fxuser
POSTGRES_PASSWORD=fxpassword  # CHANGE IN PRODUCTION!
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment and set for production

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_PORT=8000
API_HOST=0.0.0.0

# ----------------------------------------------------------------------------
# Elasticsearch & Kibana Configuration
# ----------------------------------------------------------------------------
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
# ELASTICSEARCH_USER=elastic  # Uncomment for production
# ELASTICSEARCH_PASSWORD=  # Uncomment for production

KIBANA_HOST=0.0.0.0
KIBANA_PORT=5601

# ----------------------------------------------------------------------------
# Currency Pairs Configuration
# ----------------------------------------------------------------------------
# Comma-separated list of currencies to track (base is USD)
# Supported: EUR,GBP,JPY,CAD,AUD,CHF,CNY,INR,SEK,NZD,MXN,SGD,HKD,NOK,KRW,TRY,RUB,INR,BRL,ZAR
TRACKED_CURRENCIES=EUR,GBP,JPY,CAD,AUD,CHF,CNY,INR

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Multiprocessing Configuration
# ----------------------------------------------------------------------------
# Number of worker processes for cross-rate calculations
CROSS_RATE_WORKERS=4

# Number of worker processes for alert checking
ALERT_WORKERS=2

# ----------------------------------------------------------------------------
# Performance Tuning (Advanced)
# ----------------------------------------------------------------------------
# Elasticsearch bulk size (number of documents per bulk request)
ES_BULK_SIZE=100

# Redis cache TTL in seconds
REDIS_CACHE_TTL=60

# Database connection pool size
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ----------------------------------------------------------------------------
# Development/Testing Configuration
# ----------------------------------------------------------------------------
# Set to 'development' for verbose logging, 'production' for optimized
ENVIRONMENT=production

# Enable debug mode (DO NOT use in production)
DEBUG=False

